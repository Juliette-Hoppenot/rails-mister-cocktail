<h1>Discover the <%= @cocktail.name  %></h1>
<%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>

<ul>
<% @doses.each do |dose| %>
  <li><%= "#{dose.ingredient.name} | #{dose.description}" %> <%= link_to 'delete', dose_path(dose), method: :delete %></li>
  <% end %>
</ul>

<h1>Add a dose</h1>

<%= simple_form_for [@cocktail, @dose] do |f| %>
  <%= f.association :ingredient %>
  <%= f.input :description %>
  <%= f.submit class: 'btn btn-primary' %>
<% end %>

<p>
  <%= link_to "Delete cocktail", cocktail_path(@cocktail), method: :delete, data: { confirm: "Sure?" } %>
</p>
<p>
  <%= link_to "Back to all cocktails", cocktails_path %>
</p>
